---
const { content } = Astro.props;
import Nav from "../components/Nav.svelte";
---

<html>
  <head>
    <title>{content.title} - ucicalendar.com</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta charset="utf-8" />
  </head>

  <!-- Permanently set dark-theme class so Radix dark scales apply when prefers-color-scheme is dark. -->
  <body class="dark-theme">
    <div id="nav-parent">
      <Nav pathname={Astro.url.pathname} />
    </div>
    <main>
      <article>
        <slot />
      </article>
    </main>

    <style is:global>
      @import "@radix-ui/colors/gray.css";
      @import "@radix-ui/colors/blue.css";
      @import "@radix-ui/colors/red.css";

      @import "@radix-ui/colors/grayDark.css" (prefers-color-scheme: dark);
      @import "@radix-ui/colors/blueDark.css" (prefers-color-scheme: dark);
      @import "@radix-ui/colors/redDark.css" (prefers-color-scheme: dark);

      body {
        margin: auto;
        padding: 0 16px;
        max-width: 600px;
        color: var(--gray12);
        font-family: sans-serif;
        line-height: 130%;
      }

      body.dark-theme {
        background-color: var(--gray1);
      }

      #nav-parent {
        margin-top: 1em;
      }

      main {
        margin-bottom: 8em;
      }

      h1 {
        margin-top: 2em;
      }

      h2 {
        margin-top: 1.5em;
      }

      code {
        padding: 2px;
        border-radius: 4px;
        background-color: var(--gray3);
      }

      a {
        color: var(--blue11);
      }
    </style>
  </body>
</html>
